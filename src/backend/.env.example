# Application Settings
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/linkedin_profiles
DATABASE_SSL_ENABLED=false
DATABASE_CONNECTION_LIMIT=10

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_KEY_PREFIX=linkedin_profiles_

# Clerk Authentication
CLERK_API_KEY=your_clerk_api_key
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_OAUTH_CALLBACK_URL=http://localhost:3000/api/v1/auth/callback
CLERK_JWT_EXPIRY_SECONDS=86400
CLERK_AUTHORIZED_DOMAINS=localhost,yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100